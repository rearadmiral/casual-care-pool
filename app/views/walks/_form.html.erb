<%= form_for(@walk) do |f| %>
  <% if @walk.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@walk.errors.count, "error") %> prohibited this walk from being saved:</h2>

      <ul>
      <% @walk.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: 'Happy Hour after Work' %> (optional)
  </div>
  <div class="field">
    <%= f.label :requested_at %><br>
    <%= f.datetime_local_field :requested_at,
          step: 15.minutes,
          min: Time.parse("12:00:00"),
          max: Time.parse("12:00:00") + 3.months %>
  </div>
  <%= f.hidden_field :dog_id %>
  <div class="actions">
    <%= f.submit submit_label %>
  </div>
<% end %>
